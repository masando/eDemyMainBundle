@media screen and (max-width: 699px) {
    #wrapper {
        width: 98%;
        overflow: hidden;
        margin: 5px;
    }
}
@media screen and (min-width: 700px) {
    #wrapper {
        {% if params['#wrapper width'] is defined %}
            width: {{ params['#wrapper width'] }};
            margin: 0 auto;
        {% else %}
            width: 100%;
        {% endif %}
    }
}

form label {
    display: inline;
}
form input[type="radio"], form input[type="checkbox"] {
    width:15px !important;
    display:inline-block;
}

* {
    font-family: Roboto, sans-serif;
    font-weight: 400;
    font-size: 13px;
}

body {
    {% if params['body color'] is defined %}
        color: {{ params['body color'] }};
    {% endif %}
}

.alert {
    color: red;
}

strong {
    font-weight: 700;
}
