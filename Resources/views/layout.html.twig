<!DOCTYPE html>
<html xmlns:hx="http://purl.org/NET/hinclude">
    <head>
        <meta charset="UTF-8" />
        {% if description is defined -%}
        <meta name="description" content="{{ description|raw }}" />
        {% endif -%}
        {% if keywords is defined -%}
        <meta name="keywords" content="{{ keywords|raw }}" />
        {% endif -%}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% if title is defined -%}
        <title>{{ title|raw }}</title>
        {% endif -%}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ path('edemy_css_file', { 'file' : 'main'}) }}" />
        <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300' rel='stylesheet' type='text/css' />
        <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,100' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="/SlickNav/slicknav.css" />
        <link rel="stylesheet" media="screen" href="/superfish/dist/css/superfish.css">        
        {# <script src="/Flux-Slider/js/zepto/zepto.js" type="text/javascript" charset="utf-8"></script> #}
        <script src="/hinclude/hinclude.js" type="text/javascript"></script>
        <script src="/components/jquery/jquery.min.js"></script>
        <script src="/SlickNav/jquery.slicknav.min.js"></script>
        <script src="/superfish/dist/js/superfish.js"></script>
        <script src="/jquery-backstretch/jquery.backstretch.min.js"></script>
        {# <script src="/Flux-Slider/js/flux.min.js"></script> #}
        {# <script src="/Flux-Slider/js/flux.jquery.min.js"></script> #}
        <link rel="stylesheet" href="/FlexSlider/flexslider.css" type="text/css">
        <script src="/FlexSlider/jquery.flexslider.js"></script>
        {% if meta is defined %}
            {{ meta|raw }}
        {% endif %}
        <script src="http://vast-engineering.github.io/jquery-popup-overlay/jquery.popupoverlay.js"></script>
    </head>
    <body>
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/es_ES/sdk.js#xfbml=1&appId=354883801328100&version=v2.0";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script> 

      <div id="wrapper">
        {# edemy_logo_show() #}
        {#
        {% if header is defined %}
            {{ header|raw }}
        {% endif %}
        #}
        {{ render_esi(controller('edemy.header:header', { _route: app.request.attributes.get('_route')} )) }}


        {% if content is defined %}{{ content|raw }}{% endif %}
        {# render_esi(controller('edemy.content:content', { _path: app.request.getPathInfo }) ) #}


        {#
        {% if footer is defined %}
            {{ footer|raw }}
        {% endif %}
        #}
        {{ render_esi(controller('edemy.footer:footer', { _route: app.request.attributes.get('_route')} )) }}
      </div>
        {#
        {% javascripts '@jquery_js' combine=true %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        #}

        {#
        <!–[if lt IE 9]>
        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
        <![endif]–>
        #}
        {% if namespace is defined %}
            {{ render_hinclude(controller('edemy.menu:adminMenu', { 'namespace' : namespace })) }}
        {% else %}
            {{ render_hinclude(controller('edemy.menu:adminMenu')) }}
        {% endif %}

        {{ tinymce_init() }}
        <script src="{{ path('edemy_javascript_file') }}" type="text/javascript"></script>
    </body>
</html>
