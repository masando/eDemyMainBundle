
        
			<script type="text/javascript">
				$(window).on("scroll", function() {
                  if(GetWidth() > 700) {
					var fromTop = $(window).scrollTop();
					if(fromTop > 40) {
						if(!$('#wrapper').hasClass("fixed")) {
							$('#wrapper').addClass("fixed");
							$('#wrapper').css("overflow","hidden");
							$('#wrapper').css("height","150px");
							$('#cart_tray').css("position","fixed");
						}
						if(fromTop < 70) {
							$('#wrapper').height(145 - (fromTop - 40));
						} else {
							$('#wrapper').height(145 - (70 - 40));
						}
						$('#menu').css("margin-top", 185);
						if(fromTop < 100) {
							$('#menu').css("margin-top", 185);
						}
					} else {
						$('#wrapper').removeClass("fixed");
						$('#wrapper').css("height","185px");
						$('#menu').css("margin-top", 0);
						$('#cart_tray').css("position","absolute");
					}
                  } else {
						$('#wrapper').removeClass("fixed");
						$('#wrapper').css("height","100px");
                        $('#wrapper').css("overflow","none");
						$('#menu').css("margin-top", 0);
						$('#cart_tray').css("position","absolute");
                        window.onresize = function(event) {
                            $('#wrapper').removeClass("fixed");
                            $('#wrapper').css("height","100px");
                            $('#wrapper').css("overflow","none");
                            $('#menu').css("margin-top", 0);
                            $('#cart_tray').css("position","absolute");
                        };
                  }
				});

                  function GetWidth()
                  {
                          var x = 0;
                          if (self.innerHeight)
                          {
                                  x = self.innerWidth;
                          }
                          else if (document.documentElement && document.documentElement.clientHeight)
                          {
                                  x = document.documentElement.clientWidth;
                          }
                          else if (document.body)
                          {
                                  x = document.body.clientWidth;
                          }
                          return x;
                  }                
			</script>
            
